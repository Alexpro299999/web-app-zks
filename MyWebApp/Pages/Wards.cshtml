@page
@model MyWebApp.Pages.WardsModel
@{
    ViewData["Title"] = "Палаты";
}

<div class="flex items-center justify-between mb-8">
    <div>
        <h1 class="text-3xl font-bold text-slate-800">Стационар</h1>
        <p class="text-slate-500 mt-1">Управление больничными палатами</p>
    </div>
    <a asp-page="AddEditWard" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-xl text-sm font-semibold shadow-lg shadow-blue-200 transition-all flex items-center gap-2 transform hover:-translate-y-0.5">
        <i class="fa-solid fa-bed-pulse"></i> Добавить палату
    </a>
</div>

<div class="bg-white shadow-xl shadow-slate-200/60 rounded-2xl border border-slate-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-100">
            <thead class="bg-slate-50/80">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Номер</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Тип палаты</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Этаж</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Вместимость</th>
                    <th class="px-6 py-4 text-right text-xs font-bold text-slate-500 uppercase tracking-wider">Действия</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-100">
                @if (Model.Wards.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="px-6 py-12 text-center text-slate-500">
                            Список палат пуст.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.Wards)
                    {
                        <tr class="hover:bg-blue-50/50 transition-colors duration-200">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center text-slate-500 font-bold text-sm">
                                        @item.Number
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    @item.Type
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                                @item.Floor
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                                <div class="flex items-center gap-2">
                                    <i class="fa-solid fa-users text-slate-300 text-xs"></i>
                                    @item.Capacity мест
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a asp-page="./AddEditWard" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 mr-4 transition-colors">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                </a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="inline" onsubmit="return confirm('Удалить палату?');">
                                    <button type="submit" class="text-red-500 hover:text-red-700 transition-colors">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>