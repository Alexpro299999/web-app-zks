@page "{id:int?}"
@model MyWebApp.Pages.AddEditDoctorModel
@{
    ViewData["Title"] = Model.Doctor.Id == 0 ? "Добавление врача" : "Редактирование врача";
}

<div class="max-w-3xl mx-auto">
    <div class="flex items-center gap-3 mb-6 text-sm text-slate-500">
        <a asp-page="./Doctors" class="hover:text-blue-600 transition-colors"><i class="fa-solid fa-arrow-left mr-1"></i> К списку</a>
        <span class="text-slate-300">/</span>
        <span class="font-medium text-slate-800">@ViewData["Title"]</span>
    </div>

    <div class="bg-white shadow-xl shadow-slate-200/60 rounded-2xl border border-slate-100 overflow-hidden">
        <div class="px-8 py-6 border-b border-slate-100 bg-gradient-to-r from-blue-600 to-indigo-600">
            <h2 class="text-xl font-bold text-white flex items-center gap-3">
                <i class="fa-solid fa-user-doctor opacity-80"></i>
                @ViewData["Title"]
            </h2>
        </div>

        <div class="p-8">
            <form method="post">
                <input type="hidden" asp-for="Doctor.Id" />

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    <div class="md:col-span-1">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Фамилия</label>
                        <input asp-for="Doctor.LastName" class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all form-input" />
                        <span asp-validation-for="Doctor.LastName" class="text-red-500 text-xs mt-1 block"></span>
                    </div>
                    <div class="md:col-span-1">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Имя</label>
                        <input asp-for="Doctor.FirstName" class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all form-input" />
                        <span asp-validation-for="Doctor.FirstName" class="text-red-500 text-xs mt-1 block"></span>
                    </div>
                    <div class="md:col-span-1">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Отчество</label>
                        <input asp-for="Doctor.MiddleName" class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all form-input" />
                    </div>
                </div>

                <div class="bg-slate-50/50 rounded-xl p-6 border border-slate-100 mb-8">
                    <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Профессиональная информация</h3>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Специализация</label>
                            <div class="relative">
                                <i class="fa-solid fa-stethoscope absolute left-4 top-3.5 text-slate-400 text-sm"></i>
                                <input asp-for="Doctor.Specialization" class="w-full pl-10 pr-4 py-2.5 bg-white border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all form-input" placeholder="Терапевт" />
                            </div>
                            <span asp-validation-for="Doctor.Specialization" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Номер кабинета</label>
                            <div class="relative">
                                <i class="fa-solid fa-door-open absolute left-4 top-3.5 text-slate-400 text-sm"></i>
                                <input asp-for="Doctor.CabinetNumber" class="w-full pl-10 pr-4 py-2.5 bg-white border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all form-input" placeholder="101" />
                            </div>
                            <span asp-validation-for="Doctor.CabinetNumber" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-semibold text-slate-700 mb-2">График приема</label>
                            <input asp-for="Doctor.Schedule" class="w-full px-4 py-2.5 bg-white border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all form-input" placeholder="Пн-Пт: 09:00 - 17:00" />
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-end gap-4">
                    <a asp-page="./Doctors" class="px-6 py-2.5 rounded-xl text-sm font-semibold text-slate-600 hover:bg-slate-100 hover:text-slate-800 transition-all">Отмена</a>
                    <button type="submit" class="px-8 py-2.5 rounded-xl text-sm font-semibold bg-blue-600 text-white shadow-lg shadow-blue-200 hover:bg-blue-700 hover:shadow-xl hover:-translate-y-0.5 transition-all">
                        Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}