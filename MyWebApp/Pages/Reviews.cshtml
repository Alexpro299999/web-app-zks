@page
@model MyWebApp.Pages.ReviewsModel
@{
    ViewData["Title"] = "Отзывы";
}

<div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Отзывы клиентов</h1>
    <a asp-page="AddEditReview" class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-sm transition-colors flex items-center decoration-none">
        <i class="fa-solid fa-plus mr-2"></i> Добавить отзыв
    </a>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    @foreach (var item in Model.Reviews)
    {
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            <div class="flex justify-between items-start mb-4">
                <div class="flex items-center gap-3">
                    <div class="bg-emerald-100 text-emerald-600 w-10 h-10 rounded-full flex items-center justify-center font-bold">
                        @item.Client?.FirstName.Substring(0, 1)
                    </div>
                    <div>
                        <h3 class="font-medium text-gray-900">@item.Client?.Fio</h3>
                        <p class="text-xs text-gray-500">@item.Procedure?.Name</p>
                    </div>
                </div>
                <div class="flex text-yellow-400 text-sm">
                    @for (int i = 0; i < item.Rating; i++)
                    {
                        <i class="fa-solid fa-star"></i>
                    }
                </div>
            </div>

            <p class="text-gray-600 text-sm mb-4">"@item.Comment"</p>

            <div class="flex justify-between items-center pt-4 border-t border-gray-50">
                <span class="text-xs text-gray-400">@item.Date.ToShortDateString()</span>
                <div class="flex gap-2">
                    <a asp-page="./AddEditReview" asp-route-id="@item.Id" class="text-gray-400 hover:text-emerald-600">
                        <i class="fa-regular fa-pen-to-square"></i>
                    </a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" style="display:inline;" onsubmit="return confirm('Удалить отзыв?');">
                        <button type="submit" class="text-gray-400 hover:text-red-600 border-0 bg-transparent">
                            <i class="fa-regular fa-trash-can"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>