@page
@model MyWebApp.Pages.PatientsModel
@{
    ViewData["Title"] = "Пациенты";
}

<div class="flex items-center justify-between mb-8">
    <div>
        <h1 class="text-3xl font-bold text-slate-800">База пациентов</h1>
        <p class="text-slate-500 mt-1">Управление карточками пациентов</p>
    </div>
    <a asp-page="/AddEditPatient" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-xl text-sm font-semibold shadow-lg shadow-blue-200 transition-all flex items-center gap-2 transform hover:-translate-y-0.5">
        <i class="fa-solid fa-plus"></i> Новый пациент
    </a>
</div>

<div class="bg-white shadow-xl shadow-slate-200/60 rounded-2xl border border-slate-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-100">
            <thead class="bg-slate-50/80">
                <tr>
                    <th class="px-8 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Пациент</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Полис ОМС</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Контакты</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Дата рождения</th>
                    <th class="px-8 py-4 text-right text-xs font-bold text-slate-500 uppercase tracking-wider">Управление</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-100">
                @if (Model.Patients.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="px-8 py-12 text-center">
                            <div class="flex flex-col items-center justify-center">
                                <div class="bg-slate-50 p-4 rounded-full mb-3">
                                    <i class="fa-regular fa-folder-open text-3xl text-slate-300"></i>
                                </div>
                                <p class="text-slate-500 font-medium">База пациентов пуста</p>
                                <p class="text-slate-400 text-sm">Нажмите "Новый пациент" для добавления записи</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.Patients)
                    {
                        <tr class="hover:bg-blue-50/50 transition-colors duration-200 group table-row-hover">
                            <td class="px-8 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-sm mr-4">
                                        @(item.LastName.Substring(0, 1))
                                    </div>
                                    <div>
                                        <div class="text-sm font-bold text-slate-800">@item.LastName @item.FirstName</div>
                                        <div class="text-xs text-slate-500">@item.MiddleName</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-slate-100 text-slate-600 border border-slate-200">
                                    @item.InsuranceNumber
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-slate-600"><i class="fa-solid fa-phone text-slate-300 mr-2"></i>@item.Phone</div>
                                <div class="text-xs text-slate-400 mt-1">@item.Address</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                                @item.BirthDate.ToString("d")
                            </td>
                            <td class="px-8 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center justify-end gap-2 opacity-60 group-hover:opacity-100 transition-opacity">
                                    <a asp-page="./AddEditPatient" asp-route-id="@item.Id" class="p-2 bg-white border border-slate-200 rounded-lg text-blue-600 hover:bg-blue-50 hover:border-blue-200 transition-all shadow-sm" title="Редактировать">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Вы уверены, что хотите удалить карточку пациента?');" style="display:inline;">
                                        <button type="submit" class="p-2 bg-white border border-slate-200 rounded-lg text-red-500 hover:bg-red-50 hover:border-red-200 transition-all shadow-sm" title="Архивировать">
                                            <i class="fa-regular fa-trash-can"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>