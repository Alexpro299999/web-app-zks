@page
@model MyWebApp.Pages.EmployeesModel
@{
    ViewData["Title"] = "Сотрудники";
}

<div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Сотрудники</h1>
    <a asp-page="AddEditEmployee" class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-sm transition-colors flex items-center decoration-none">
        <i class="fa-solid fa-plus mr-2"></i> Добавить
    </a>
</div>

<div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ФИО</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Должность</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model.Employees)
                {
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@item.FullName</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@item.Position</td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium flex justify-end gap-2">
                            <a asp-page="./AddEditEmployee" asp-route-id="@item.Id" class="text-emerald-600 hover:text-emerald-900 bg-emerald-50 px-3 py-1 rounded hover:bg-emerald-100 transition">
                                <i class="fa-regular fa-pen-to-square"></i> Ред.
                            </a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" style="display:inline;" onsubmit="return confirm('Удалить сотрудника?');">
                                <button type="submit" class="text-red-600 hover:text-red-900 bg-red-50 px-3 py-1 rounded hover:bg-red-100 transition border-0">
                                    <i class="fa-regular fa-trash-can"></i> Удал.
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>