@page "{id:int?}"
@model MyWebApp.Pages.AddEditPatientModel
@{
    ViewData["Title"] = Model.Patient.Id == 0 ? "Регистрация пациента" : "Карточка пациента";
}

<div class="max-w-3xl mx-auto">
    <div class="flex items-center gap-3 mb-6 text-sm text-slate-500">
        <a asp-page="./Patients" class="hover:text-blue-600 transition-colors"><i class="fa-solid fa-arrow-left mr-1"></i> К списку</a>
        <span class="text-slate-300">/</span>
        <span class="font-medium text-slate-800">@ViewData["Title"]</span>
    </div>

    <div class="bg-white shadow-xl shadow-slate-200/60 rounded-2xl border border-slate-100 overflow-hidden">
        <div class="px-8 py-6 border-b border-slate-100 bg-gradient-to-r from-blue-50 to-white">
            <h2 class="text-xl font-bold text-slate-800 flex items-center gap-3">
                <div class="w-10 h-10 rounded-xl bg-blue-600 flex items-center justify-center text-white shadow-lg shadow-blue-200">
                    <i class="fa-regular fa-id-card"></i>
                </div>
                @ViewData["Title"]
            </h2>
        </div>

        <div class="p-8">
            <form method="post">
                <input type="hidden" asp-for="Patient.Id" />

                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Персональные данные</h3>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Фамилия <span class="text-red-500">*</span></label>
                        <input asp-for="Patient.LastName" class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder-slate-400 form-input" placeholder="Иванов" />
                        <span asp-validation-for="Patient.LastName" class="text-red-500 text-xs mt-1 block font-medium"></span>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Имя <span class="text-red-500">*</span></label>
                        <input asp-for="Patient.FirstName" class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder-slate-400 form-input" placeholder="Иван" />
                        <span asp-validation-for="Patient.FirstName" class="text-red-500 text-xs mt-1 block font-medium"></span>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Отчество</label>
                        <input asp-for="Patient.MiddleName" class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder-slate-400 form-input" placeholder="Иванович" />
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Дата рождения</label>
                        <input asp-for="Patient.BirthDate" type="date" class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all form-input" />
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Полис ОМС <span class="text-red-500">*</span></label>
                        <input asp-for="Patient.InsuranceNumber" class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder-slate-400 form-input" placeholder="0000 0000 0000 0000" />
                        <span asp-validation-for="Patient.InsuranceNumber" class="text-red-500 text-xs mt-1 block font-medium"></span>
                    </div>
                </div>

                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4 pt-4 border-t border-slate-100">Контактная информация</h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Телефон</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <i class="fa-solid fa-phone text-slate-400 text-xs"></i>
                            </div>
                            <input asp-for="Patient.Phone" class="w-full pl-10 pr-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder-slate-400 form-input" placeholder="+7 (999) 000-00-00" />
                        </div>
                        <span asp-validation-for="Patient.Phone" class="text-red-500 text-xs mt-1 block font-medium"></span>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Адрес проживания</label>
                        <input asp-for="Patient.Address" class="w-full px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder-slate-400 form-input" placeholder="Улица, дом, квартира" />
                    </div>
                </div>

                <div class="flex items-center justify-end gap-4 mt-10 pt-6 border-t border-slate-100">
                    <a asp-page="/Patients" class="px-6 py-2.5 rounded-xl text-sm font-semibold text-slate-600 hover:bg-slate-100 hover:text-slate-800 transition-all">Отмена</a>
                    <button type="submit" class="px-8 py-2.5 rounded-xl text-sm font-semibold bg-blue-600 text-white shadow-lg shadow-blue-200 hover:bg-blue-700 hover:shadow-xl hover:-translate-y-0.5 transition-all">
                        Сохранить карту
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}