@page
@model ErrorModel
@{
    ViewData["Title"] = "Ошибка";
}

<div class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center max-w-lg mx-auto">
        <div class="w-24 h-24 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6 text-red-500 animate-pulse">
            <i class="fa-solid fa-triangle-exclamation text-4xl"></i>
        </div>

        <h1 class="text-4xl font-bold text-slate-800 mb-2">Что-то пошло не так</h1>
        <p class="text-slate-500 text-lg mb-8">Произошла непредвиденная ошибка при обработке вашего запроса.</p>

        @if (Model.ShowRequestId)
        {
            <div class="bg-slate-100 rounded-xl p-4 mb-8 text-left border border-slate-200">
                <p class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Техническая информация</p>
                <code class="text-sm text-slate-800 font-mono">Request ID: @Model.RequestId</code>
            </div>
        }

        <div class="flex items-center justify-center gap-4">
            <a href="/" class="px-6 py-3 bg-blue-600 text-white rounded-xl font-semibold hover:bg-blue-700 transition-colors shadow-lg shadow-blue-200">
                Вернуться на главную
            </a>
            <button onclick="window.location.reload()" class="px-6 py-3 bg-white text-slate-600 border border-slate-200 rounded-xl font-semibold hover:bg-slate-50 transition-colors">
                Попробовать снова
            </button>
        </div>
    </div>
</div>