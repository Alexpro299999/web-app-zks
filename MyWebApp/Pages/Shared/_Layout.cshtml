<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Поликлиника №1</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="text-slate-800 h-screen flex overflow-hidden bg-slate-100">

    <aside class="w-72 sidebar-gradient flex-shrink-0 hidden md:flex flex-col z-20 text-white shadow-xl">
        <div class="h-20 flex items-center px-8 border-b border-slate-700/50">
            <div class="text-blue-400 text-2xl font-bold flex items-center gap-3">
                <div class="bg-blue-500/20 p-2 rounded-lg">
                    <i class="fa-solid fa-staff-snake"></i>
                </div>
                <span class="text-white tracking-tight">Поликлиника</span>
            </div>
        </div>
        
        <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto">
            <p class="px-4 text-xs font-bold text-slate-400 uppercase tracking-wider mb-2">Главное</p>
            
            <a asp-page="/Index" class="w-full flex items-center px-4 py-3 text-sm font-medium rounded-xl text-slate-300 hover:bg-white/10 hover:text-white transition-all group">
                <i class="fa-solid fa-chart-simple w-6 mr-3 text-slate-400 group-hover:text-blue-400 transition-colors"></i>
                Обзор
            </a>

            <p class="px-4 text-xs font-bold text-slate-400 uppercase tracking-wider mt-8 mb-2">Регистратура</p>

            <a asp-page="/Patients" class="w-full flex items-center px-4 py-3 text-sm font-medium rounded-xl text-slate-300 hover:bg-white/10 hover:text-white transition-all group">
                <i class="fa-solid fa-hospital-user w-6 mr-3 text-slate-400 group-hover:text-blue-400 transition-colors"></i>
                Пациенты
            </a>
            
            <a asp-page="/Doctors" class="w-full flex items-center px-4 py-3 text-sm font-medium rounded-xl text-slate-300 hover:bg-white/10 hover:text-white transition-all group">
                <i class="fa-solid fa-user-doctor w-6 mr-3 text-slate-400 group-hover:text-blue-400 transition-colors"></i>
                Врачи
            </a>

            <p class="px-4 text-xs font-bold text-slate-400 uppercase tracking-wider mt-8 mb-2">Стационар</p>

            <a asp-page="/Wards" class="w-full flex items-center px-4 py-3 text-sm font-medium rounded-xl text-slate-300 hover:bg-white/10 hover:text-white transition-all group">
                <i class="fa-solid fa-bed-pulse w-6 mr-3 text-slate-400 group-hover:text-blue-400 transition-colors"></i>
                Палаты
            </a>
        </nav>

        <div class="p-6 border-t border-slate-700/50 bg-slate-800/30">
            <div class="flex items-center gap-4">
                <div class="relative">
                    <img src="https://ui-avatars.com/api/?name=Head+Doctor&background=3b82f6&color=fff" class="h-10 w-10 rounded-xl shadow-lg border-2 border-slate-600" alt="User">
                    <span class="absolute bottom-0 right-0 block h-2.5 w-2.5 rounded-full bg-green-400 ring-2 ring-slate-800"></span>
                </div>
                <div>
                    <p class="text-sm font-semibold text-white">Иванов И.И.</p>
                    <p class="text-xs text-slate-400">Главврач</p>
                </div>
            </div>
        </div>
    </aside>

    <div class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <header class="bg-white/80 backdrop-blur-md border-b border-slate-200 h-20 flex items-center justify-between px-6 sm:px-8 md:hidden sticky top-0 z-10">
            <div class="text-blue-600 text-xl font-bold flex items-center gap-2">
                <i class="fa-solid fa-staff-snake"></i> Поликлиника
            </div>
            <button onclick="document.querySelector('aside').classList.toggle('hidden'); document.querySelector('aside').classList.toggle('fixed'); document.querySelector('aside').classList.toggle('h-full'); document.querySelector('aside').classList.toggle('w-full');" class="text-slate-500 hover:text-slate-700 p-2">
                <i class="fa-solid fa-bars text-2xl"></i>
            </button>
        </header>

        <main class="flex-1 overflow-y-auto bg-slate-50/50 p-4 sm:p-8 scroll-smooth">
            <div class="max-w-7xl mx-auto animate-fade-in">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>