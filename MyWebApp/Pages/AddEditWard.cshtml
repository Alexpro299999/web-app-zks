@page "{id:int?}"
@model MyWebApp.Pages.AddEditWardModel
@{
    ViewData["Title"] = Model.Ward.Id == 0 ? "Новая палата" : "Редактирование палаты";
}

<div class="max-w-xl mx-auto">
    <div class="flex items-center gap-3 mb-6 text-sm text-slate-500">
        <a asp-page="./Wards" class="hover:text-blue-600 transition-colors"><i class="fa-solid fa-arrow-left mr-1"></i> Назад</a>
        <span class="text-slate-300">/</span>
        <span class="font-medium text-slate-800">@ViewData["Title"]</span>
    </div>

    <div class="bg-white shadow-xl shadow-slate-200/60 rounded-2xl border border-slate-100 overflow-hidden">
        <div class="px-8 py-6 border-b border-slate-100 bg-slate-50">
            <h2 class="text-xl font-bold text-slate-800">
                @ViewData["Title"]
            </h2>
        </div>

        <div class="p-8">
            <form method="post">
                <input type="hidden" asp-for="Ward.Id" />

                <div class="space-y-6">
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Номер палаты</label>
                        <input asp-for="Ward.Number" class="w-full px-4 py-2.5 bg-white border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all form-input" placeholder="101-А" />
                        <span asp-validation-for="Ward.Number" class="text-red-500 text-xs mt-1 block"></span>
                    </div>

                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Этаж</label>
                            <input asp-for="Ward.Floor" type="number" class="w-full px-4 py-2.5 bg-white border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all form-input" />
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Вместимость</label>
                            <input asp-for="Ward.Capacity" type="number" class="w-full px-4 py-2.5 bg-white border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all form-input" />
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Тип палаты</label>
                        <select asp-for="Ward.Type" class="w-full px-4 py-2.5 bg-white border border-slate-200 rounded-xl text-slate-800 focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all appearance-none cursor-pointer">
                            <option value="Общая">Общая</option>
                            <option value="Дневной стационар">Дневной стационар</option>
                            <option value="Интенсивная терапия">Интенсивная терапия</option>
                            <option value="VIP">VIP</option>
                            <option value="Изолятор">Изолятор</option>
                        </select>
                    </div>
                </div>

                <div class="flex items-center justify-end gap-4 mt-8 pt-6 border-t border-slate-100">
                    <a asp-page="./Wards" class="px-6 py-2.5 rounded-xl text-sm font-semibold text-slate-600 hover:bg-slate-100 transition-all">Отмена</a>
                    <button type="submit" class="px-8 py-2.5 rounded-xl text-sm font-semibold bg-blue-600 text-white shadow-lg shadow-blue-200 hover:bg-blue-700 hover:shadow-xl hover:-translate-y-0.5 transition-all">
                        Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}