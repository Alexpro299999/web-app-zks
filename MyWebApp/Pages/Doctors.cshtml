@page
@model MyWebApp.Pages.DoctorsModel
@{
    ViewData["Title"] = "Врачи";
}

<div class="flex items-center justify-between mb-8">
    <div>
        <h1 class="text-3xl font-bold text-slate-800">Медицинский персонал</h1>
        <p class="text-slate-500 mt-1">Список врачей поликлиники</p>
    </div>
    <a asp-page="AddEditDoctor" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-xl text-sm font-semibold shadow-lg shadow-blue-200 transition-all flex items-center gap-2 transform hover:-translate-y-0.5">
        <i class="fa-solid fa-user-plus"></i> Добавить врача
    </a>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @if (Model.Doctors.Count == 0)
    {
        <div class="col-span-full bg-white p-12 rounded-2xl border border-slate-100 text-center shadow-sm">
            <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-300">
                <i class="fa-solid fa-user-doctor text-2xl"></i>
            </div>
            <h3 class="text-lg font-medium text-slate-800 mb-1">Нет данных</h3>
            <p class="text-slate-500">Список врачей пуст</p>
        </div>
    }
    else
    {
        @foreach (var item in Model.Doctors)
        {
            <div class="bg-white rounded-2xl border border-slate-100 p-6 hover:shadow-xl hover:shadow-slate-200/50 transition-all duration-300 group relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-0 group-hover:opacity-100 transition-opacity flex gap-2 z-10">
                    <a asp-page="./AddEditDoctor" asp-route-id="@item.Id" class="w-8 h-8 flex items-center justify-center bg-white border border-slate-200 rounded-lg text-blue-600 hover:bg-blue-50 shadow-sm transition-colors">
                        <i class="fa-regular fa-pen-to-square text-xs"></i>
                    </a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Удалить врача?');">
                        <button type="submit" class="w-8 h-8 flex items-center justify-center bg-white border border-slate-200 rounded-lg text-red-500 hover:bg-red-50 shadow-sm transition-colors">
                            <i class="fa-regular fa-trash-can text-xs"></i>
                        </button>
                    </form>
                </div>

                <div class="flex items-start gap-4 mb-4">
                    <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-100 to-indigo-100 flex items-center justify-center flex-shrink-0 shadow-inner">
                        <i class="fa-solid fa-user-doctor text-2xl text-blue-600"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-slate-800 leading-tight mb-1">@item.LastName @item.FirstName</h3>
                        <p class="text-blue-600 font-medium text-sm">@item.Specialization</p>
                        <p class="text-slate-400 text-xs mt-1">@item.MiddleName</p>
                    </div>
                </div>

                <div class="space-y-3 pt-4 border-t border-slate-50">
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-slate-500 flex items-center gap-2"><i class="fa-solid fa-door-open text-slate-300 w-4"></i> Кабинет</span>
                        <span class="font-semibold text-slate-700 bg-slate-100 px-2 py-0.5 rounded">@item.CabinetNumber</span>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-slate-500 flex items-center gap-2"><i class="fa-regular fa-clock text-slate-300 w-4"></i> Прием</span>
                        <span class="font-medium text-slate-700">@item.Schedule</span>
                    </div>
                </div>
            </div>
        }
    }
</div>