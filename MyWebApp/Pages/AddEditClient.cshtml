@page "{id:int?}"
@model MyWebApp.Pages.AddEditClientModel
@{
    ViewData["Title"] = Model.Client.Id == 0 ? "Новый клиент" : "Редактирование клиента";
}

<div class="max-w-2xl mx-auto">
    <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 bg-emerald-600">
            <h2 class="text-lg font-medium text-white">@ViewData["Title"]</h2>
        </div>
        <div class="p-6">
            <form method="post">
                <input type="hidden" asp-for="Client.Id" />

                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Фамилия</label>
                        <input asp-for="Client.LastName" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" />
                        <span asp-validation-for="Client.LastName" class="text-red-500 text-xs mt-1 block"></span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Имя</label>
                        <input asp-for="Client.FirstName" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" />
                        <span asp-validation-for="Client.FirstName" class="text-red-500 text-xs mt-1 block"></span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Отчество</label>
                        <input asp-for="Client.MiddleName" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" />
                        <span asp-validation-for="Client.MiddleName" class="text-red-500 text-xs mt-1 block"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Телефон</label>
                    <input asp-for="Client.Phone" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" />
                    <span asp-validation-for="Client.Phone" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input asp-for="Client.Email" type="email" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm" />
                    <span asp-validation-for="Client.Email" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <div class="flex items-center justify-end gap-3">
                    <a asp-page="./Clients" class="text-gray-600 hover:text-gray-900 text-sm font-medium">Отмена</a>
                    <button type="submit" class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-sm transition-colors">
                        Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}